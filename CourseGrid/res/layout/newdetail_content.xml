<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffc">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffa500">

    

     <Button
         android:id="@+id/hshare"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:text="分享"
         android:textSize="30dp"
         android:onClick="share"
         android:background="#ffa500"
         android:textColor="#000" />

    </RelativeLayout>
    <TextView
        android:id="@+id/myid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    

    <TextView
        android:id="@+id/textview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="科目："
        android:textColor="#000"
         />
    
    <EditText
        android:id="@+id/kemutext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="true"
        android:textColor="#000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    

    <TextView
        android:id="@+id/textview6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="具体内容："
        android:textColor="#000" />
    
    <EditText
        android:id="@+id/neirongtext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="true"
        android:textColor="#000" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    

    <TextView
        android:id="@+id/textview9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="童鞋，起始时间是："
        android:textColor="#000" />
    
    <EditText
        android:id="@+id/qishidate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="true"
        android:textColor="#000" />
      <EditText
        android:id="@+id/qishitime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="true"
        android:textColor="#000" />
      </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <TextView
        android:id="@+id/textview211"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="童鞋，截止时间是："
        android:textColor="#000" />
    
     
      <EditText
        android:id="@+id/jiezhidate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="true"
        android:textColor="#000" />
       <EditText
        android:id="@+id/jiezhitime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="true"
        android:textColor="#000" />
      
    </LinearLayout>
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    
    
      <TextView
        android:id="@+id/textview51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="那你总共有"
        android:textColor="#000" />
     <EditText
        android:id="@+id/totaltime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:textColor="#000" />
     
       <TextView
        android:id="@+id/textview61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间哦~~~"
        android:textColor="#000" />
</LinearLayout>
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

     <Button
         android:id="@+id/okbuton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:text="确定" />

     </RelativeLayout>/>

</LinearLayout>
